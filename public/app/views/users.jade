.container(ng-controller="UsersCtrl")
    .row
        .col-lg-8
            .page-header
                h1 Users
            .bs-component
                .form-group
                    label.control-label Search:
                    input.form-control(type="text", ng-model="searchByUsername.username")
            .bs-component
                table.table.table-striped.table-hover
                    thead
                        tr
                            th Username
                            th Delete
                    tbody
                        tr(ng-repeat="user in users | filter: searchByUsername")
                            td
                                a(href="/#/users/profile/{{ user._id }}") {{ user.username }}
                            td
                                button.btn.btn-danger(ng-click="deleteUser(user._id)") Delete