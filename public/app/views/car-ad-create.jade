.container
    .row
        .col-lg-6
            .well.bs-component
                form.form-horizontal(name="createAdForm")
                    fieldset
                        legend New
                    .form-group
                        label.col-lg-3.control-label Brand
                        .col-lg-9
                            select.form-control.form-select(ng-model="carad.selectedBrand" ng-options="b.name for b in brands" ng-change="changeBrand()", required="required")
                    .form-group
                        label.col-lg-3.control-label Model
                        .col-lg-9
                            select.form-control.form-select(ng-model="carad.selectedModel" ng-options="model for model in carad.selectedBrand.models", required="required")
                    .form-group
                        label.col-lg-3.control-label Price
                        .col-lg-9
                            input.form-control.form-validation.form-input(ng-model="carad.price", type="text", placeholder="Price", ng-pattern="/^[0-9]{1,8}$/", required="required")
                    .form-group
                        label.col-lg-3.control-label Year
                        .col-lg-9
                            input.form-control.form-validation.form-input(ng-model="carad.year", type="text", placeholder="Year", ng-pattern="/^[12][0-9]{3}$/", required="required")
                    .form-group
                        label.col-lg-3.control-label Fuel type
                        .col-lg-9
                            select.form-control.form-select(ng-model="carad.fuelType", required="required")
                                option Gasoline
                                option Diesel
                                option Gas
                                option Electric
                    .form-group
                        .pull-right
                            button.btn.btn-primary(ng-click="createAd(carad)" ng-disabled="createAdForm.$invalid") Create
                            a.btn.btn-primary(href="#") Cancel

