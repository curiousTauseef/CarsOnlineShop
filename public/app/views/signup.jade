.container(ng-controller="SignUpCtrl")
    .vell
        form.form-horizontal(name="signUpForm")
            fieldset
                legend Create New User
                .form-group
                    label.col-md-2.control-label(for="username") Username
                    .col-md-10
                        input.form-control(type="text", placeholder="Username", ng-model="user.username", required)
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-10
                        input.form-control(type="password", placeholder="Password", ng-model="user.password", required)
                .form-group
                    label.col-md-2.control-label(for="password") Repeat password
                    .col-md-10
                        input.form-control(type="password", placeholder="Password", ng-model="user.repeatPassword", required)
                .form-group
                    label.col-md-2.control-label(for="email") Email
                    .col-md-10
                        input.form-control(type="text", placeholder="Email", ng-model="user.email", required, ng-pattern="/^[a-z]+[a-z0-9._]+@[a-z]+\.[a-z]{2,5}$/")
                .form-group
                    label.col-md-2.control-label(for="phoneNumber") Phone number
                    .col-md-10
                        input.form-control(type="text", placeholder="Phone number", ng-model="user.phoneNumber")
                .pull-right
                    button.btn.btn-primary(ng-click="signup(user)" ng-disabled="signUpForm.$invalid") Create
                    a.btn.btn-primary(href="#") Cancel
